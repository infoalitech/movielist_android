<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/homebackground"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:width="100dp"
                android:text="Register"
                android:textColor="@color/HeadingColor"
                android:background="@color/HeadingBackground"
                android:textSize="50dp"/>
            <TextView
                android:id="@+id/registererror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ffff"
                android:gravity="center"
                android:padding="5dp"
                android:text="test"
                android:textColor="#F44336"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:width="100dp"
                android:text="Username"
                android:textColor="@color/TextViewColor"
                android:background="@color/TextViewBackground"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/inputusernameReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:width="100dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/inputColor"
                android:background="@color/inputBackground"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="password"
                android:width="100dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/TextViewColor"
                android:background="@color/TextViewBackground"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/inputpasswordReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:width="100dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/inputColor"
                android:background="@color/inputBackground"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email"
                android:width="100dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/TextViewColor"
                android:background="@color/TextViewBackground"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/inputemailReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:width="100pt"
                android:layout_marginTop="10pt"
                android:textColor="@color/inputColor"
                android:background="@color/inputBackground"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actor"
                android:width="100dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/TextViewColor"
                android:background="@color/TextViewBackground"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/inputActor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:width="100pt"
                android:layout_marginTop="10pt"
                android:textColor="@color/inputColor"
                android:background="@color/inputBackground"
                android:textSize="20dp"
                android:padding="5dp"/>



            <Button
                android:id="@+id/saveUserbtn"
                android:onClick="saveUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save User"
                android:width="100pt"
                android:layout_marginTop="10pt"
                android:textColor="@color/ButtonText"
                android:background="@color/ButtonBackground"
                android:textSize="40dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>